generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String     @id @default(cuid())
  run          String?    @unique
  email        String     @unique
  passwordHash String
  role         Role       @default(CUSTOMER)
  isActive     Boolean    @default(true)
  fullName     String?
  name         String?
  lastName     String?
  phone        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  addresses    Address[]
  audits       AuditLog[] @relation("ActorAudits")
  orders       Order[]
}

model Region {
  id     String @id @default(cuid())
  name   String @unique
  cities City[]
}

model City {
  id        String    @id @default(cuid())
  name      String
  regionId  String
  addresses Address[]
  region    Region    @relation(fields: [regionId], references: [id])

  @@unique([name, regionId])
  @@index([regionId])
}

model Address {
  id           String  @id @default(cuid())
  userId       String
  street       String
  cityId       String
  zip          String
  isDefault    Boolean @default(false)
  contactPhone String?
  label        String?
  city         City    @relation(fields: [cityId], references: [id])
  user         User    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([cityId])
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Int
  image       String
  images      String[]    @default([])
  stock       Int         @default(0)
  brand       String?
  sku         String?     @unique
  weight      Float?
  isActive    Boolean     @default(true)
  tags        String[]    @default([])
  views       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  categoryId  String?
  orderItems  OrderItem[]
  category    Category?   @relation(fields: [categoryId], references: [id])

  @@index([isActive])
  @@index([categoryId])
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  customerEmail   String
  status          OrderStatus @default(PENDING)
  total           Int         @default(0)
  createdAt       DateTime    @default(now())
  shippingAddress Json?
  webpayToken     String?     @unique
  paymentStatus   String?
  user            User?       @relation(fields: [userId], references: [id])
  items           OrderItem[]
  otps            OrderOtp[]

  @@index([userId])
  @@index([status])
  @@index([customerEmail])
  @@index([webpayToken])
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  qty           Int
  priceSnapshot Int
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product @relation(fields: [productId], references: [id])
}

model OrderOtp {
  id         String    @id @default(cuid())
  orderId    String
  email      String
  codeHash   String
  expiresAt  DateTime
  consumedAt DateTime?
  attempts   Int       @default(0)
  lastSentAt DateTime  @default(now())
  createdAt  DateTime  @default(now())
  order      Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([email])
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String
  action    String
  entity    String
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())
  actor     User     @relation("ActorAudits", fields: [actorId], references: [id])

  @@index([actorId])
  @@index([action])
  @@index([entity])
}

model MediaAsset {
  id          String          @id @default(cuid())
  type        MediaAssetType
  section     String // 'banner', 'category-1', 'category-2', etc.
  title       String?
  url         String
  displayOrder Int            @default(0)
  isActive    Boolean         @default(true)
  objectFit   String?         @default("contain") // 'contain' or 'cover'
  objectPosition String?      @default("center")  // CSS object-position value
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([type, section])
  @@index([type])
  @@index([section])
  @@index([isActive])
}

enum Role {
  ADMIN
  WORKER
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum MediaAssetType {
  BANNER
  CATEGORY_IMAGE
  LOGO
  PROMOTION
}
