generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  WORKER
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(CUSTOMER)
  isActive     Boolean  @default(true)
  fullName     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders       Order[]
  audits       AuditLog[] @relation("ActorAudits")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  image       String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]

  @@index([isActive])
}

model Order {
  id            String      @id @default(cuid())

  // invitado: userId nullable
  userId        String?
  user          User?       @relation(fields: [userId], references: [id])

  // guardar email (para invitado y para logged)
  customerEmail String

  status        OrderStatus @default(PENDING)
  total         Int         @default(0)
  createdAt     DateTime    @default(now())

  items         OrderItem[]
  otps          OrderOtp[]

  @@index([userId])
  @@index([status])
  @@index([customerEmail])
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId     String
  product       Product @relation(fields: [productId], references: [id])

  qty           Int
  priceSnapshot Int
}

model OrderOtp {
  id         String   @id @default(cuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  email      String
  codeHash   String
  expiresAt  DateTime
  consumedAt DateTime?
  attempts   Int      @default(0)
  lastSentAt DateTime @default(now())
  createdAt  DateTime @default(now())

  @@index([orderId])
  @@index([email])
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String
  actor     User     @relation("ActorAudits", fields: [actorId], references: [id])

  action    String
  entity    String
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())

  @@index([actorId])
  @@index([action])
  @@index([entity])
}
